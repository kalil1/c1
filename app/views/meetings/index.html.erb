<p style="color: green"><%= notice %></p>

<h1>Monthly Calendar</h1>

<%= month_calendar(events: @meetings) do |date, meetings| %>
  <%= link_to date.strftime("%B %d, %Y"), week_meetings_path(start_date: date.beginning_of_week), class: "week-link" %>
  
  <ul>
    <% meetings.each do |meeting| %>
      <li><%= meeting.name %> - <%= meeting.start_time.strftime("%H:%M") %></li>
    <% end %>
  </ul>
<% end %>

<%= week_calendar(number_of_weeks: 2) do |date| %>
  <%= date %>
<% end %>

<div id="meetings">
  <% @meetings.each do |meeting| %>
    <%= render meeting %>
    <p>
      <%= link_to "Show this meeting", meeting %>
    </p>
  <% end %>
</div>

<%= link_to "New meeting", new_meeting_path %>
